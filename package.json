{
  "name": "polymer-twitter-timeline",
  "version": "1.0.0",
  "description": "Polymer (3) wrapper of Twitter Widget Library for Timelines",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LasaleFamine/polymer-twitter-timeline.git"
  },
  "scripts": {
    "start": "yarn build && http-server .",
    "build": "webpack --config test/webpack.config.js",
    "pretest": "yarn posttest && ln -s node_modules bower_components",
    "test": "xo && yarn build && wct",
    "posttest": "rm -rf bower_components",
    "fix": "xo --fix"
  },
  "files": [
    "src"
  ],
  "xo": {
    "space": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "test/**"
    ]
  },
  "author": "Alessio Occhipinti @lasalefamine",
  "license": "MIT",
  "devDependencies": {
    "web-component-tester": "6.1.5",
    "webpack": "3.5.5",
    "xo": "0.18.2"
  },
  "dependencies": {
    "@polymer/polymer": "LasaleFamine/polymer#3.0-preview",
    "polymer-lib-loader": "1.0.2"
  }
}
